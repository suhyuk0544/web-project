{{>layouts/header}}
<style>
    .wrap{
        display: flex;
        flex-direction: column;
        align-items: center;
    }

</style>

<body class="bg-gradient-primary">

<div class="container">
    <div class="container-fluid" style="margin-top: 40px; ">
        <form action="/main/savePost" method="post" enctype="multipart/form-data">
            <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}" />
            <div class="form-group wrap" ><label for="">제목 </label>
                <textarea class="form-control form-control-solid wrap" type="text" name="title" rows="1" required="required" style="margin: 10px" placeholder="title"></textarea>
            </div>
            <div class="form-group wrap"><label for="">내용 </label>
                <textarea class="form-control form-control-solid wrap" type="text" name="content" rows="20" required="required" style="margin: 10px" placeholder="content"></textarea>
            </div>
            <input class="btn btn-primary wrap" type="submit" value="저장 ">
        </form>
    </div>
</div>

</body>

{{>layouts/footer}}