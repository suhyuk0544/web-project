{{>layouts/header}}
<div class="container my-3">

    {{#Post}}
    <h2 class="border-bottom py-2">{{title}}</h2>
    <div class="card my-3">
        <div class="card-body">
            <div class="card-text" style="white-space: pre-line;">{{content}}</div>
            <div class="d-flex justify-content-end">
                <div class="badge badge-light p-2">
                    {{createTime}}
                </div>
            </div>
        </div>
    </div>
    <a href="/main/{{id}}/setPost" class="btn btn-primary">수정</a>

    <a href="/delete/{{id}}" class="btn btn-primary">삭제 </a>

    {{/Post}}
</div>



{{>layouts/footer}}