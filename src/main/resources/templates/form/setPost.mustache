{{>layouts/header}}
<style>
    .wrap{
        display: flex;
        flex-direction: column;
        align-items: center;
    }

</style>

<body class="bg-gradient-primary">

<div class="container">
    <div class="container-fluid" style="margin-top: 40px; ">
        {{#SetPost}}
        <form action="/main/{{id}}/setPost" method="post" enctype="multipart/form-data">
            <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}" />
            <div class="form-group wrap"><label for="">제목 </label>
                <textarea class="form-control form-control-solid wrap" type="text" name="title" rows="1" style="margin: 10px">{{title}}</textarea>
            </div>
            <div class="form-group wrap"><label for="">내용 </label>
                <textarea class="form-control form-control-solid wrap" type="text" name="content" rows="20" style="margin: 10px">{{content}}</textarea>
            </div>
            <input class="btn btn-primary wrap" type="submit" value="저장 ">
        </form>
        {{/SetPost}}
    </div>
</div>

</body>

{{>layouts/footer}}